{% extends 'base.html.twig' %}

{% block api %} 

    <article class="content">

    <h1>Lecture d'une recette par son identifiant</h1>
    <h3>GET - {{ base_url('api') }}/{token}/recipe/{id} <a target="_blanck" href="{{ base_url('api') }}/jetonDocAPI/recipe/1">Test API</a></h3>
    <h4>Paramètres : token = Token API, id = identifiant recette</h4>
    <div class="flexbox-container">
        <div>
            <h4>Retour format JSON :</h4>
            <img class="responsive" src="{{base_url('assets/images/jsonRecipe.png')}}">
        </div>
        <div>
